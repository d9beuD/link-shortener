{% extends 'base.html.twig' %}

{% block title %}Shorten Your Link Here{% endblock %}

{% block body %}
    <h1 class="text-4xl mb-6 font-bold dark:text-slate-100">Shorten Your Link Here</h1>

    {{ include('link/_form.html.twig') }}

    {% if shortenedUrl %}
        <div class="bg-green-100 border border-green-500 rounded mt-4 px-4 py-2">
            <h2 class="text-xl text-green-700">Your link has been successfully shortened! Just copy it.</h2>
            <input class="w-full p-0 border-0 bg-transparent select-all" value="{{ shortenedUrl }}" disabled>
        </div>
    {% endif %}
{% endblock %}
